
{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
       "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "react": {
            "version": "detect" 
    }
    },
    "overrides": [
        {
          "files": ["*.jsx", "*.js"], 
          "rules": {
            "semi": ["error", "always"], 
            "quotes": ["error", "single", { "allowTemplateLiterals": true }],
            "indent": ["error", 4]
           }
        }
      ]
    
}